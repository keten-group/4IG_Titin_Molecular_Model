# This is LAMMPS input script specifies a CG model of curli fiber and self-assemble

# General
units       real
atom_style full
dimension        3
boundary     p  p  p

# Style
bond_style harmonic
angle_style charmm
#angle_style  harmonic
dihedral_style charmm
#improper_style umbrella

pair_style      lj/charmm/coul/charmm 8 12
#pair_style      lj/cut  10.0
pair_modify     mix arithmetic
#kspace_style    pppm 1e-6
#special_bonds   dreiding
#kspace_modify   order 4 

# Atom Definition
read_data    1.data
#read_restart  equi300_5.restart

special_bonds   charmm

#replicate 2 2 2

#group ions  id 5821 5822 5823 5824 5825 5826 5827 5828

# Settings
neighbor    2.0 bin
neigh_modify     delay 0 every 1 check yes
timestep         1.0

# Output
thermo_style     custom step vol temp press density etotal pe ke lx ly lz evdwl ebond eangle edihed ecoul elong
thermo           10000

#fix xwalls ions wall/reflect xlo EDGE xhi EDGE
#fix zwalls ions wall/reflect zlo EDGE zhi EDGE

#Minimize 
min_style  sd
minimize   0.0  0.0  10000 10000
min_style  cg
minimize   0.0  0.0  10000 10000

dump 1 all atom 20000  EPDM_eq.lammpstrj

#fix 5 all npt temp 300.0 300.0 100.0 x 1.0 1.0 1000.0 z 1.0 1.0 1000.0  couple none
fix 5 all nvt temp 300.0 300.0 100.0 
fix 10 all momentum 100 angular
velocity     all create 300 8531416
run          1000000
write_data   equi_t300_1ns.data
undump 1

dump 1 all atom 20000  EPDM.lammpstrj

fix 3 all deform 1 y erate 0.0000001  remap x units box
compute      1 all pressure thermo_temp
fix          11 all ave/time 1 20 100 c_1[1] c_1[2] c_1[3] c_1[4] c_1[5] c_1[6] file tensile.data
timestep    1
thermo      100000
run     32000000
write_data   pull_320.data 
unfix        11    
uncompute    1






